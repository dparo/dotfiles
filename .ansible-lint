---
# vi: ft=yaml
# .ansible-lint

profile: basic
use_default_rules: true
loop_var_prefix: ^(__|{role}_)

warn_list:
  - role-name

kinds:
  - playbook: "site.{yml,yaml}"
  - tasks: "roles/*/tasks/*.yml"
  - vars: "roles/*/vars/*.yml"
  - meta: "roles/*/meta/main.yml"
  - galaxy: "**/folder/galaxy.yml"
  - yaml: ""

exclude_paths:
  - .cache
  - .github
  - .pre-commit-config.yaml
  - roles/*/files/
