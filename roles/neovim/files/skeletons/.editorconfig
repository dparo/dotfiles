# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{xml,html,xhtml,htm,xht}]
indent_size = 4


[*.{rst,md,yaml,yml,json}]
indent_size = 2


[*.sh]
end_of_line = lf

[Makefile]
indent_style = tab
end_of_line = lf

[*.go]
indent_style = tab
