#!/usr/bin/env bash

run() {
    nohup "$@" >/dev/null 2>&1 &
    disown
}

basedir="/tmp/$USER/notes/$(date --iso-8601)"
mkdir -p "$basedir"

file="$(mktemp -p "$basedir" --suffix="-$(date).md")"

if builtin type marktext 1>/dev/null 2>/dev/null; then
    touch "$file"
    cd "$(dirname "$file")" || exit 1
    run marktext "$(dirname "$file")" "$file"
else
    run kitty -d "$(dirname "$file")" -- nvim  "$file"
fi

