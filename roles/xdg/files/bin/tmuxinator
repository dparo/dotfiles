#!/usr/bin/env bash

# set -x

selection="$(find ~/src -maxdepth 8 \( -name node_modules -o -name target -o -name build \) -prune -o \( -type f -o -type d \) -name '.git' -print | fzf)"

if test "$?" -ne 0; then
    exit 1
fi

selection="$(dirname "$selection")"
d="$(dirname "$selection")"
project="$(basename "$selection")"
portale="$(basename "$d")"
d="$(dirname "$d")"
root="$(basename "$d")"
d="$(dirname "$d")"
rootroot="$(basename "$d")"

session="$rootroot/$root/$portale/$project"

session="$(echo "$session" | sed 's@\.@_@g')"

tmux has-session -t="$session" 2>/dev/null || tmux new-session -d -s "$session" -c "$selection"

if [ -n "$TMUX" ]; then
    tmux switch-client -t "$session"
else
    tmux a -t "$session"
fi
