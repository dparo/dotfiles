    useHttpPath = true
[credential]
    helper = cache --timeout=7200
[gpg]
    program = gpg
[commit]
    gpgsign = true
[global]
[init]
    defaultBranch = master
[github]
    user = dparo
[push]
    autoSetupRemote = true
    default = simple
[fetch]
    prune = true
[pull]
    rebase = false
    default = current
[color]
    ui = auto
[gui]
    historybrowser = git-dag
    editor = nvim
[alias]
    pushf = push --force-with-lease --force-if-includes
    lola = log --graph --decorate --oneline --abbrev-commit --all --full-history
    dirdiff = difftool --tool=meld --dir-diff
[diff]
    ; tool = p4merge
    tool = meld
    guitool = meld
    guiDefault = auto
    keepBackup = false
    keepTemporaries = false
    trustExitCode = false
    prompt = false
    colorMoved = default
[diff "hex"]
    textconv = hexdump -v -C
    binary = true
[difftool "meld"]
    ; cmd = meld "$LOCAL" "$REMOTE"
    prompt = false
[difftool "p4merge"]
    cmd = p4merge "$LOCAL" "$REMOTE"
    trustExitCode = false
    prompt = false
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
    trustExitCode = false
    prompt = false
[difftool "idea"]
    cmd = idea diff $LOCAL $REMOTE
    trustExitCode = false
    prompt = false
[rebase]
    autosquash = true
[merge]
    tool = p4merge
    ; tool = meld
    conflictstyle = diff3
    summary = true
    keepbackup = false
    writeToTemp = true
    ; https://git-scm.com/docs/git-merge#Documentation/git-merge.txt---autostash
    autoStash = false
[mergetool]
    keepBackup = false
    keepTemporaries = false
    trustExitCode = true
    writeToTemp = true
    prompt = false
[mergetool "meld"]
    ; cmd = meld --output "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    keepBackup = false
    keepTemporaries = false
    writeToTemp = true
    trustExitCode = true
    prompt = false
[mergetool "p4merge"]
# See https://git-scm.com/book/en/v2/Customizing-Git-Git-Configuration
    cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
    keepBackup = false
    keepTemporaries = false
    writeToTemp = true
    trustExitCode = true
    prompt = false
[mergetool "vscode"]
    cmd = code --wait --merge "$REMOTE" "$LOCAL" "$BASE" "$MERGED"
    keepBackup = false
    keepTemporaries = false
    writeToTemp = true
    trustExitCode = false
    prompt = false
[mergetool "idea"]
    cmd = idea merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
    keepBackup = false
    keepTemporaries = false
    writeToTemp = true
    trustExitCode = false
    prompt = false
[interactive]
    diffFilter = delta --color-only --features=interactive
[delta]
    navigate=true
    features = decorations
    whitespace-error-style = 22 reverse
    syntax-theme = ansi
    diff-so-fancy=false
    side-by-side=false
    hyperlinks = true
    # plus-style = syntax bold auto
    # minus-style = syntax bold auto
[delta "interactive"]
    keep-plus-minus-markers = true
[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style =
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
    verbose = false
[diff "lockb"]
    textconv = bun
    binary = true
