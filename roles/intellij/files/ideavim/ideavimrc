set idearefactormode=keep
set ideajoin
set surround
set NERDTree

set smartcase
set ignorecase

set clipboard+=unnamedplus

set selection=exclusive

let mapleader = " "


nnoremap <leader><leader> :action ActivateProjectToolWindow<CR>

nnoremap <leader>ff :action GotoFile<CR>
nnoremap <M-x> :action GotoAction<CR>
nnoremap <C-`> :action Terminal<CR>
nnoremap <F4> :action Terminal<CR>

vnoremap <C-c> y
vnoremap <C-v> y _dgP
inoremap <C-v> <C-R><C-P>+


inoremap <C-e> <End>
inoremap <C-a> <Home>

nnoremap <C-e> <End>
nnoremap <C-a> <Home>

vnoremap <C-e> <End>
vnoremap <C-a> <Home>
